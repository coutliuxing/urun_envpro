<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/cw_tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_head"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_head"
        android:text="订阅网站"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cw_tv_label"
        android:layout_toEndOf="@+id/cw_tv_label"
        android:layout_toRightOf="@+id/cw_tv_label"
        android:hint="网站检索" />

</RelativeLayout>